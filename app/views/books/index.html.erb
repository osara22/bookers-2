<div class="container px-3 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <img src="" alt="">
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <td>mama</td>
          </tr>
          <tr>
            <th>introduction</th>
            <td>hai</td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block btn-sm" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
        <label>Title</label>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Opinion</label>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create book', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
    <div class="col-md-8">

    </div>
  </div>
</div>