<table>
  <tbody>
   <% book.book_comments.each do |book_comment| %>
     <tr>
      <td class="image-width-book-show">
        <%= link_to user_path(book_comment.user_id) do %>
          <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpg', size: "40x40", fallback: "ikko.jpg" %><br />
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <% if @books.user == current_user %>
        <td>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-danger btn-sm", method: :delete %>
        </td>
      <% end %>
    </tr>
   <% end %>
  </tbody>
</table>
  <%= form_with(model:[book, book_comment], local: true) do |f| %>
    <div class="form-group">
      <%= f.text_area :comment, rows:'5', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "送信" %>
    </div>
 <% end %>

